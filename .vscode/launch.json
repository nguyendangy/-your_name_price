    "version": "0.2.0",
    "configurations": [
        {
            "name": "workspace",
            "request": "launch",
            "type": "dart",
            "args": [
                "--web-port",
                "$FLUTTER_WEB_PORT",
                "--web-hostname",
                "0.0.0.0",
                "--observatory-port",
                "$FLUTTER_DEBUG_PORT"
            ]
        },
        {
            "name": "wordspace",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "wordspace (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "wordspace (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}